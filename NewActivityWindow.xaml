<Window x:Class="TimeTracker.NewActivityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuova Attività" Height="220" Width="350"
        WindowStartupLocation="CenterOwner">
    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="LightGreen">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="DarkGreen">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="5,8">
                                    <LineSegment Point="11,8"/>
                                </PathFigure>
                                <PathFigure StartPoint="8,5">
                                    <LineSegment Point="8,11"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="DarkGreen" Thickness="1.5"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Nome attività:" Grid.Row="0" />
        <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="0,5,0,10" />
        <TextBlock Text="Durata (minuti):" Grid.Row="2" />
        <TextBox x:Name="DurationTextBox" Grid.Row="3" Margin="0,5,0,15" Text="25" />
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salva" Width="80" Margin="5" Click="SaveButton_Click" />
            <Button Content="Annulla" Width="80" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>

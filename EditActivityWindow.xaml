<Window x:Class="TimeTracker.EditActivityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifica Attività" Height="320" Width="400"
        WindowStartupLocation="CenterOwner">
    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="LightBlue">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="DarkBlue">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="4,10">
                                    <LineSegment Point="6,12"/>
                                    <LineSegment Point="12,6"/>
                                    <LineSegment Point="10,4"/>
                                    <LineSegment Point="4,10"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="DarkBlue" Thickness="0.5"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Nome attività:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="10,5,0,10" />
        
        <TextBlock Text="Durata (minuti):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox x:Name="DurationTextBox" Grid.Row="1" Grid.Column="1" Margin="10,5,0,10" />
        
        <TextBlock Text="Data inizio:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
        <DatePicker x:Name="StartDatePicker" Grid.Row="2" Grid.Column="1" Margin="10,5,0,10" />
        
        <TextBlock Text="Ora inizio:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,10">
            <TextBox x:Name="StartHourTextBox" Width="30" Text="09" />
            <TextBlock Text=":" Margin="5,0" VerticalAlignment="Center" />
            <TextBox x:Name="StartMinuteTextBox" Width="30" Text="00" />
        </StackPanel>
        
        <TextBlock Text="Data fine:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
        <DatePicker x:Name="EndDatePicker" Grid.Row="4" Grid.Column="1" Margin="10,5,0,10" />
        
        <TextBlock Text="Ora fine:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,15">
            <TextBox x:Name="EndHourTextBox" Width="30" Text="09" />
            <TextBlock Text=":" Margin="5,0" VerticalAlignment="Center" />
            <TextBox x:Name="EndMinuteTextBox" Width="30" Text="25" />
        </StackPanel>
        
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salva" Width="80" Margin="5" Click="SaveButton_Click" />
            <Button Content="Annulla" Width="80" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
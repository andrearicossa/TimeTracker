<Window x:Class="TimeTracker.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="200" Width="350"
        WindowStartupLocation="CenterOwner">
    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="Orange">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="DarkOrange">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="8,8">
                                    <LineSegment Point="8,3"/>
                                </PathFigure>
                                <PathFigure StartPoint="8,8">
                                    <LineSegment Point="12,8"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="DarkOrange" Thickness="1.5"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="ActivityNameText" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock x:Name="TimerText" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />
            <Button x:Name="StopButton" Content="Stop" Width="100" Height="40" Click="StopButton_Click" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="TimeTracker.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="200" Width="350">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="ActivityNameText" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock x:Name="TimerText" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />
            <Button x:Name="StopButton" Content="Stop" Width="100" Height="40" Click="StopButton_Click" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="TimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="NewActivityButton" Grid.Row="0" Content="Nuovo" Height="40" Width="120" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center" Click="NewActivityButton_Click" />
        <DataGrid x:Name="ActivitiesDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Inizio" Binding="{Binding StartTime}" Width="*" />
                <DataGridTextColumn Header="Fine" Binding="{Binding EndTime}" Width="*" />
                <DataGridTextColumn Header="Durata (min)" Binding="{Binding DurationMinutes}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
